# Production environment variables for Vercel deployment
# This file will be used when NODE_ENV=production

# NextAuth.js configuration
NEXTAUTH_URL=https://synthalyst.vercel.app
NEXT_PUBLIC_BASE_URL=https://synthalyst.vercel.app
NEXT_PUBLIC_API_URL=https://synthalyst.vercel.app

# Vercel specific
VERCEL=1
VERCEL_ENV=production

# Use the same database URL but with SSL mode required for Vercel
DATABASE_URL="postgresql://postgres:Pgpostgres@24@localhost:5432/synthalyst?schema=public&sslmode=require"

# Set this to false in production
MOCK_NEWSLETTER=false

