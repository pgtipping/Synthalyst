{
  "version": 2,
  "buildCommand": "npm install @tailwindcss/postcss && node scripts/ensure-postcss-config.js && npx rimraf .next && prisma generate && node scripts/handle-db-build.js && next build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_VERCEL_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "outputDirectory": ".next",
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "functions": {
    "src/app/api/apply-right/**/*": {
      "maxDuration": 60
    }
  }
}
