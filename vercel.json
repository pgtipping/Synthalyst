{
  "buildCommand": "cd nextjs-app && npm install && node scripts/simple-build.js",
  "installCommand": "cd nextjs-app && npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "outputDirectory": "nextjs-app/.next",
  "env": {
    "NEXT_PUBLIC_BASE_URL": "https://www.synthalyst.com",
    "NEXT_PUBLIC_APP_URL": "https://www.synthalyst.com",
    "NEXTAUTH_URL": "https://www.synthalyst.com",
    "NEXT_PUBLIC_VERCEL_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1",
    "VERCEL": "1",
    "VERCEL_ENV": "production",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "functions": {
    "nextjs-app/src/app/api/apply-right/**/*": {
      "maxDuration": 60
    }
  }
}
